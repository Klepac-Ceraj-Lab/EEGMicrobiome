  author = {Barnikol, Utako B. and Amunts, Katrin and Dammers, Jürgen and Mohlberg, Hartmut and Fieseler, Thomas and Malikovic, Aleksandar and Zilles, Karl and Niedeggen, Michael and Tass, Peter A.},
