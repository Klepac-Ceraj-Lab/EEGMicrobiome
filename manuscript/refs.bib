@article{bajGlutamatergicSignalingMicrobiotaGutBrain2019,
  title = {Glutamatergic {{Signaling Along The Microbiota-Gut-Brain Axis}}},
  author = {Baj, Andreina and Moro, Elisabetta and Bistoletti, Michela and Orlandi, Viviana and Crema, Francesca and Giaroni, Cristina},
